<!--index.wxml-->
<view class="container" data-weui-theme="{{theme}}">
    <!-- <image class="avatar" mode="scaleToFill" src="{{userAvatar}}"></image> -->
    <view class="title">
        {{userName}}の积分：{{userIntegral || 0}}
    </view>
    <view class="elementBox">
        <view wx:for="{{homeElement}}" wx:for-item="typeItem" wx:key="name" class="element">
            <view bindtap="jumpPage" data-page="{{dest[typeItem.name]}}">
                <image class="element_img" mode="aspectFit" src="{{typeItem.pic}}"></image>
                <br/>
                {{typeItem.name}}
            </view>
        </view>
    </view>
</view>