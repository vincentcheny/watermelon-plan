/**app.wxss**/

page {
    background: #F0F0F0;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding-top: 54rpx;
    padding-bottom: 60rpx;
}

.theme-white {
    --bg-color: #e9e9e9;
    background-color: var(--bg-color);
    --bd-color: #a3a3a3;
    border-color: var(--bd-color);
    --dv-color: #c9c9c9;
    --dv-color-dark: #7a7a7a;
    --title-color: #666666;
}

.theme-melon {
    --bg-color: #cee4d9;
    background-color: var(--bg-color);
    --bd-color: #8eb38c;
    border-color: var(--bd-color);
    --dv-color: #e2aeaea2;
    --dv-color-dark: #ca9f9f;
    --title-color: #537550;
    --title-color-dark: #8ab186;
}

.theme-dog {
    --bg-color: #e8eef0;
    background-color: var(--bg-color);
    --bd-color: #6991b3;
    border-color: var(--bd-color);
    --dv-color: #afd2e2;
    --dv-color-dark: #8da9b6;
    --title-color: #5a7d9c;
    --title-color-dark: #b0c5d8;
}

.theme-star {
    --bg-color: #f8ced6;
    background-color: var(--bg-color);
    --bd-color: #cc929c;
    border-color: var(--bd-color);
    --dv-color: #fdfdb0;
    --dv-color-dark: #969672;
    --title-color: #7e3d3d;
    --title-color-dark: #cfabab;
}

.weui-cell,
.weui-slideview {
    border-top: solid var(--dv-color)
}

.weui-cell:nth-child(1) {
    border-top: none;
}

.icon>.weui-slideview__btn {
    background-color: var(--bg-color);
    border-style: solid;
    border-color: var(--bg-color);
}

.title {
    font-family: PingFang SC;
    font-weight: 500;
    color: #000000;
    font-size: 44rpx;
    margin-top: 40rpx;
    margin-bottom: 40rpx;
}

.row_title {
    font-size: 36rpx;
    color: var(--title-color);
    padding: 20rpx 0;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}

.divider {
    height: 2rpx;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.1);
    margin-bottom: 10rpx;
}

.row {
    display: flex;
}

.integral {
    width: 95%;
    text-align: right;
    margin-top: 10rpx;
    font-size: 26rpx;
}

.box {
    text-align: center;
    border-style: solid;
    margin-top: 30rpx;
    padding-top: 17rpx;
    width: 95%;
    border-radius: 10px;
}

.bg-image {
    top: 0;
    width: 100%;
    position: fixed;
    opacity: 0.05;
    z-index: -1;
}

@media (prefers-color-scheme: dark) {
    page {
        background-color: #3f3a3a;
    }

    .title {
        color: #f6f6f6;
    }

    .row_title {
        color: var(--title-color-dark);
    }

    .box {
        background-color: #555555;
    }

    .weui-cell,
    .weui-slideview {
        border-top: solid var(--dv-color-dark)
    }

    .icon>.weui-slideview__btn {
        background-color: #555555;
        border-style: solid;
        border-color: #555555;
    }

    .bg-image {
        opacity: 0.1;
    }
}